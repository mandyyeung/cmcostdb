<div class="heading-container">
  <span class="heading-text">Filters</span>
  <div class="pull-right">
    <!-- <a href="#" class="btn btn-success heading-button" data-toggle="modal" data-target="#importFilter">Import</a> -->
    <%= link_to 'New', new_filter_path, class: "btn btn-warning heading-button" %>
    <%= link_to "Export", filters_path(format: "xls"), class: "btn btn-default heading-button" %>
  </div>
</div>

<table id="filters" class="display responsive no-wrap">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Group</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @filters.each do |filter| %>
      <tr>
        <td><%= filter.name %></td>
        <td><%= filter.description %></td>
        <td><%= filter.group %></td>
        <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
        <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="importFilter" tabindex="-1" role="dialog" aria-labelledby="ImportFilter">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Import Filters</h4>
      </div>
      <div class="modal-body">
        <%= form_tag import_teams_path, multipart: true do %>
          <%= file_field_tag :file %><br>
          <%= submit_tag "Import", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
