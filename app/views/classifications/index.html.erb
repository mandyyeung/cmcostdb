<div class="heading-container">
  <span class="heading-text">Classifications</span>
  <div class="pull-right">
    <!-- <a href="#" class="btn btn-success heading-button" data-toggle="modal" data-target="#importClassification">Import</a> -->
    <%= link_to "New", new_classification_path, class: "btn btn-warning heading-button" %>
    <%= link_to "Export", classifications_path(format: "xls"), class: "btn btn-default heading-button" %>
  </div>
</div>

<table id="classifications" class="display responsive no-wrap table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @classifications.each do |classification| %>
      <tr>
        <td><%= classification.name %></td>
        <td><%= link_to 'Edit', edit_classification_path(classification) %></td>
        <td><%= link_to 'Destroy', classification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="importClassification" tabindex="-1" role="dialog" aria-labelledby="ImportClassification">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Import Classifications</h4>
      </div>
      <div class="modal-body">
        <%= form_tag import_teams_path, multipart: true do %>
          <%= file_field_tag :file %><br>
          <%= submit_tag "Import", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
