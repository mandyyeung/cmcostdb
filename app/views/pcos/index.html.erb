<p id="notice"><%= notice %></p>

<h1>Listing Pcos</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Project</th>
      <th>Date</th>
      <th>Subcontractor</th>
      <th>Description</th>
      <th>Filter</th>
      <th>Submitted to owner</th>
      <th>Approved by owner</th>
      <th>Approx value</th>
      <th>Submitted value</th>
      <th>Approved value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pcos.each do |pco| %>
      <tr>
        <td><%= pco.number %></td>
        <td><%= pco.project %></td>
        <td><%= pco.date %></td>
        <td><%= pco.subcontractor %></td>
        <td><%= pco.description %></td>
        <td><%= pco.filter %></td>
        <td><%= pco.submitted_to_owner %></td>
        <td><%= pco.approved_by_owner %></td>
        <td><%= pco.approx_value %></td>
        <td><%= pco.submitted_value %></td>
        <td><%= pco.approved_value %></td>
        <td><%= link_to 'Show', pco %></td>
        <td><%= link_to 'Edit', edit_pco_path(pco) %></td>
        <td><%= link_to 'Destroy', pco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

