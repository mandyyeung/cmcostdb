<div class="heading-container">
  <span class="heading-text">Subcontractors</span>
  <div class="pull-right">
    <!-- <a href="#" class="btn btn-success heading-button" data-toggle="modal" data-target="#importSubcontractor">Import</a> -->
    <%= link_to 'New', new_subcontractor_path, class: "btn btn-warning heading-button" %>
    <%= link_to "Export", subcontractors_path(format: "xls"), class: "btn btn-default heading-button" %>
  </div>
</div>

<table id="subcontractors" class="display responsive no-wrap">
  <thead>
    <tr>
      <th>Name</th>
      <th>Trade</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @subcontractors.each do |subcontractor| %>
      <tr>
        <td><%= subcontractor.name %></td>
        <td><%= subcontractor.trade %></td>
        <td><%= link_to 'Edit', edit_subcontractor_path(subcontractor) %></td>
        <td><%= link_to 'Destroy', subcontractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="modal fade" id="importSubcontractor" tabindex="-1" role="dialog" aria-labelledby="ImportSubcontractor">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Import Subcontractors</h4>
      </div>
      <div class="modal-body">
        <%= form_tag import_teams_path, multipart: true do %>
          <%= file_field_tag :file %><br>
          <%= submit_tag "Import", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
